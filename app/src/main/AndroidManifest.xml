<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mcgill.ecse456.grandnapoleonsolitairegame">

    <application
        android:allowBackup="true"
        android:icon="@drawable/gns_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainPageActivity" android:screenOrientation="landscape" android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DisplayDifficultyPageActivity" android:screenOrientation="landscape" android:configChanges="orientation">
        <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            android:parentActivityName=".MainPageActivity" >
        </activity>
        <activity android:name=".AboutPageActivity" android:screenOrientation="landscape" android:configChanges="orientation">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            android:parentActivityName=".MainPageActivity" >
        </activity>
        <activity android:name=".GameActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" android:screenOrientation="landscape" android:configChanges="orientation">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            android:parentActivityName=".DisplayDifficultyPageActivity" >
        </activity>
        <activity android:name=".Instruction" android:screenOrientation="landscape" android:configChanges="orientation">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            android:parentActivityName=".MainPageActivity" >
        </activity>
        <activity android:name=".Pause" android:screenOrientation="landscape" android:configChanges="orientation">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            android:parentActivityName=".GameActivity" >
        </activity>
        <activity android:name=".SettingActivity" android:screenOrientation="landscape" android:configChanges="orientation">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            android:parentActivityName=".MainPageActivity" >
        </activity>
        <activity android:name=".ScoreTableActivity" android:screenOrientation="landscape" android:configChanges="orientation">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            android:parentActivityName=".MainPageActivity" >
        </activity>
        <activity android:name=".WinActivity" android:screenOrientation="landscape" android:configChanges="orientation">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            android:parentActivityName=".GameActivity" >
        </activity>
    </application>

</manifest>