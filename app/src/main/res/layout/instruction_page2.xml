<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/instruction2">

    <Button
        android:id="@+id/inst_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        android:layout_alignBaseline="@+id/inst_closed"
        android:layout_alignBottom="@+id/inst_closed"
        android:layout_toLeftOf="@+id/inst_closed"
        android:layout_toStartOf="@+id/inst_closed" />

    <Button
        android:id="@+id/inst_closed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:layout_marginBottom="78dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/inst_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_alignBaseline="@+id/inst_closed"
        android:layout_alignBottom="@+id/inst_closed"
        android:layout_toRightOf="@+id/inst_closed"
        android:layout_toEndOf="@+id/inst_closed" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/abstract_clubs_2"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/inst_prev"
        android:layout_toStartOf="@+id/inst_prev"
        android:layout_marginRight="49dp"
        android:layout_marginEnd="49dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/abstract_clubs_12"
        android:layout_alignTop="@+id/imageView5"
        android:layout_toLeftOf="@+id/inst_next"
        android:layout_toStartOf="@+id/inst_next" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/abstract_clubs_4"
        android:layout_alignTop="@+id/imageView6"
        android:layout_toRightOf="@+id/imageView6"
        android:layout_toEndOf="@+id/imageView6"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp" />

</RelativeLayout>