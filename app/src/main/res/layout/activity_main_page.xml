<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="mcgill.ecse456.grandnapoleonsolitairegame.MainPageActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="470px"
        android:paddingRight="470px"
        android:id="@+id/homepage_layout"
        android:layout_above="@+id/copyright_info"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/resume_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:background="@color/grey_light"
            android:text="Resume"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="24sp" />

        <Button
            android:id="@+id/start_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/resume_button"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/resume_button"
            android:layout_below="@+id/resume_button"
            android:layout_marginTop="30dp"
            android:background="@color/blue"
            android:text="Start Game"
            android:onClick="difficultyPageNavigate"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/setting_button"
            android:layout_alignStart="@+id/setting_button"
            android:layout_below="@+id/setting_button"
            android:layout_marginTop="30dp"
            android:background="@color/Lemon"
            android:onClick="ScoreTable"
            android:text="Score Table"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="24sp" />

        <Button
            android:id="@+id/instruction_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/start_button"
            android:layout_alignStart="@+id/start_button"
            android:layout_below="@+id/start_button"
            android:layout_marginTop="30dp"
            android:background="@color/green_light"
            android:text="Instructions"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="24sp" />

        <Button
            android:id="@+id/setting_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/instruction_button"
            android:layout_alignStart="@+id/instruction_button"
            android:layout_below="@+id/instruction_button"
            android:layout_marginTop="30dp"
            android:background="@color/grey_medium"
            android:text="Setting"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="24sp" />

        <Button
            android:id="@+id/closed_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/setting_button"
            android:layout_alignStart="@+id/setting_button"
            android:layout_below="@+id/setting_button"
            android:layout_marginTop="30dp"
            android:background="@color/red"
            android:text="Closed"
            android:onClick="closedApp"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textSize="24sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/developer_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:text="Developed by: \n     Sok Heng Lim \n     Andrew Lin"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/copyright_info"
        android:layout_toEndOf="@+id/copyright_info"
        android:layout_marginLeft="193dp"
        android:layout_marginStart="193dp" />

    <TextView
        android:id="@+id/author_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:text="Author: Professor \n    Gerald Ratzer"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/copyright_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Copyright Information"
        android:textColor="@android:color/darker_gray"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
